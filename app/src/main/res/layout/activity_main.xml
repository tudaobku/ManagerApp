<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start"
    tools:context=".LoginPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100dp">

        <ImageView
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="188dp"
            android:scaleType="fitEnd"
            android:src="@drawable/nameapp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="181dp" />

        <ImageView
            android:layout_width="291dp"
            android:layout_height="117dp"
            android:layout_gravity="center"
            android:src="@drawable/who"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="340dp" />

        <Button
            android:id="@+id/btnStall"
            android:layout_width="307dp"
            android:layout_height="75dp"
            android:layout_marginStart="47dp"
            android:backgroundTint="#A5E2EC"
            android:text="Supplier"
            android:textColor="#480953"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="490dp" />

        <Button
            android:id="@+id/btnCourt"
            android:layout_width="303dp"
            android:layout_height="70dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="#B5A6CD"
            android:text="Court Manager"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnStall" />
    </LinearLayout>

</RelativeLayout>
