<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_stall"
    tools:context=".ManagerHomePage">

    <Button
        android:id="@+id/btnSignOut"
        android:layout_margin="10dp"
        android:background="@drawable/ic_baseline_exit_to_app_24"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/foodcourt_01"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/courtmanager"
            android:layout_marginTop="150dp"
            android:layout_width="200dp"
            android:layout_height="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:id="@+id/btnAddNewStall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="320dp"
            android:layout_marginRight="12dp"
            android:background="#0099FF"
            android:text="Add New Stall"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:gravity="center"
            android:layout_marginTop="150dp"
            android:background="@drawable/or"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnDeleteStall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="12dp"
            android:background="#0099FF"
            android:text="Delete Stall"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />


    </LinearLayout>



</RelativeLayout>